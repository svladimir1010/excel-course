{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "browser": true,
        "es2021": true,
        "node": true
    },
    "plugins": [
        "eslint-plugin-html"
    ],
    "extends": [
        "eslint:recommended",
        "google"
    ],
    "rules": {
        "eol-last": "off",
        "semi": "off", //точка с запятой в конце       ,ki
        "arrow-parens": "off", //скобки внутри стрел функций
        "comma-dangle": "off", // запятые в конце
        "object-curly-spacing": "off", //расстояние внутри фигурных скобок
        "require-jsdoc": "off", //comments
        "allowTemplateLiterals": "off", //обратные кавычки
        "quotes": [ //кавычки только одинарн
            "warn",
            "single"
        ],
        "indent": [
            "off",
            "tab"
        ]
    }
}